# Hermes Environment Configuration
# Copy this file to .env and adjust values as needed

# Database Configuration
DATABASE_URL=sqlite:///./hermes.db

# Redis Configuration  
REDIS_URL=redis://redis:6379

# API Configuration
API_BASE_URL=http://localhost:8000
REACT_APP_API_URL=http://localhost:8000

# PostgreSQL Configuration (for production)
POSTGRES_DB=hermes
POSTGRES_USER=hermes
POSTGRES_PASSWORD=hermes_password

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# Security (generate new keys for production)
SECRET_KEY=change-this-in-production
JWT_SECRET_KEY=change-this-in-production

# API Authentication
# Set HERMES_API_KEY to enable authentication for monitoring endpoints
# Leave unset for development mode (authentication disabled)
HERMES_API_KEY=

# External API Keys (optional)
NVD_API_KEY=
EXPLOITDB_API_KEY=
CISA_KEV_API_URL=https://www.cisa.gov/sites/default/files/feeds/known_exploited_vulnerabilities.json

# Feature Flags
ENABLE_REDIS_CACHE=true
ENABLE_BACKGROUND_JOBS=false

{
  "name": "hermes-web-app",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^7.0.2",
    "@dnd-kit/utilities": "^3.2.2",
    "@tanstack/react-query": "^5.90.2",
    "@types/d3": "^7.4.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@uiw/react-md-editor": "^4.0.8",
    "d3": "^7.9.0",
    "dompurify": "^3.2.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-resizable-panels": "^3.0.6",
    "react-scripts": "5.0.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^30.0.0",
    "autoprefixer": "^10.4.0",
    "cypress": "^15.3.0",
    "http-proxy-middleware": "^3.0.5",
    "msw": "^1.3.3",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "dev": "react-scripts start",
    "start": "react-scripts start",
    "build": "DISABLE_ESLINT_PLUGIN=true react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "backend:start": "cd ../../backend && python main.py",
    "frontend:build": "npm run build && npx serve -s build -l 3000",
    "e2e": "cypress open",
    "e2e:headless": "cypress run",
    "e2e:ci": "cypress run --config video=true,screenshotOnRunFailure=true",
    "e2e:full": "run-p backend:start frontend:build && wait-on http://localhost:8000/api/v1/projects/ http://localhost:3000 && npm run e2e:headless",
    "e2e:dev": "run-p backend:start start && wait-on http://localhost:8000/api/v1/projects/ http://localhost:3000 && npm run e2e",
    "test:all": "npm test -- --watchAll=false && npm run e2e:full"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
